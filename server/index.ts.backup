// âœ… VerificaÃ§Ã£o de variÃ¡vel de ambiente
if (!process.env.NEON_DB_URL) {
  throw new Error("A variÃ¡vel de ambiente NEON_DB_URL nÃ£o estÃ¡ configurada.");
}

// âœ… ConexÃ£o com Neon usando a variÃ¡vel certa
const sql = neon(process.env.NEON_DB_URL!); // Corrigido aqui!

const app = express();
app.use(express.json());
