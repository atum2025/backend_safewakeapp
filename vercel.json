{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    { "source": "/ping", "destination": "/api/ping" },
    { "source": "/health", "destination": "/api/health" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
 "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}
